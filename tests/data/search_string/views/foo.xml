<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="foo_view_search_1" model="ir.ui.view">
    <field name="model">foo</field>
    <field name="arch" type="xml">
        <search string="Foo">
            <field name="bar"/>
        </search>
    </field>
</record>

<record id="foo_view_search_2" model="ir.ui.view">
    <field name="model">foo</field>
    <field name="arch" type="xml">
        <search>
            <field name="bar"/>
        </search>
    </field>
</record>

<record id="foo_view_search_1_inherit" model="ir.ui.view">
    <field name="model">foo</field>
    <field name="inherit_id" ref="foo_view_search_1"/>
    <field name="arch" type="xml">

        <search position="inside">
            <field name="baz"/>
        </search>

    </field>
</record>

</odoo>